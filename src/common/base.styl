@import './colors.styl'

li
  list-style none
a
  text-decoration none
*
  font-size 16px
  font-family Hiragino Sans GB
  margin 0
  padding 0
.base-top-1px
  &:before
    content ""
    position absolute
    width 100%
    height 1px
    transform scaleY(0.5)
    background-color bdcor
.base-bottom-1px
  &:after
    content ""
    position absolute
    width 100%
    height 1px
    transform translateX(0.5)
    background-color bdcor
    